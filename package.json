{
  "name": "wollok-ts-cli",
  "version": "0.0.5",
  "description": "Wollok Command Line Interface",
  "repository": "https://github.com/uqbar-project/wollok-ts-cli",
  "license": "MIT",
  "author": {
    "name": "Uqbar Foundation",
    "email": "org.uqbar@gmail.com"
  },
  "main": "./build/index.js",
  "scripts": {
    "start": "node ./build/index.js",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint",
    "test:unit": "mocha --parallel -r ts-node/register/transpile-only test/**/*.test.ts",
    "build": "shx rm -rf build && shx mkdir ./build && shx cp -r ./public ./build/public && tsc -p ./tsconfig.build.json",
    "watch": "npm run build -- -w",
    "pack": "pkg ."
  },
  "bin": {
    "wollok": "./build/index.js"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "targets": [
      "node16-linux-x64",
      "node16-macos-x64",
      "node16-win-x64"
    ],
    "assets": [
      "public/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.2.0",
    "cors": "^2.8.5",
    "cytoscape": "^3.15.2",
    "express": "^4.18.1",
    "globby": "^11.0.4",
    "loglevel": "^1.8.0",
    "p5": "^1.4.2",
    "pkg": "^5.8.1",
    "socket.io": "^4.5.1",
    "wollok-ts": "4.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/cytoscape": "^3.19.7",
    "@types/express": "^4.17.13",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.5",
    "@types/p5": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.7",
    "eslint": "^8.3.0",
    "mocha": "^10.2.0",
    "shx": "^0.3.4",
    "ts-node": "10.4.0",
    "typescript": "^4.9.5"
  }
}
