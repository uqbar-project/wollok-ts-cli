{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "build",
    "lib": ["esNext", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["test/**/*.ts", "src/**/*.ts"],
  "exclude": ["**/*.js", "node_modules"]
}
